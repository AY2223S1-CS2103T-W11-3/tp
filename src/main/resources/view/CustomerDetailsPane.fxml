<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="detailsPane" fx:id="detailsPane" prefHeight="271.0" prefWidth="278.0" xmlns="http://javafx.com/javafx/11"
      xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label id="detailsPaneName" fx:id="name" styleClass="cell_title_label" text="\$first" wrapText="true">
                    <minHeight>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE"/>
                    </minHeight>
                </Label>
                <VBox.margin>
                    <Insets bottom="8.0" />
                </VBox.margin>
            </HBox>

            <FlowPane fx:id="tags" styleClass="customerTags">
                <VBox.margin>
                    <Insets bottom="8.0" />
                </VBox.margin>
            </FlowPane>

            <Label fx:id="phone" styleClass="cell_small_label" text="\$phone">
                <minHeight>
                    <!-- Ensures that the label text is never truncated -->
                    <Region fx:constant="USE_PREF_SIZE"/>
                </minHeight>
                <VBox.margin>
                    <Insets bottom="4.0" />
                </VBox.margin>
            </Label>

            <Label fx:id="email" styleClass="cell_small_label" text="\$email">
                <minHeight>
                    <!-- Ensures that the label text is never truncated -->
                    <Region fx:constant="USE_PREF_SIZE"/>
                </minHeight>
                <VBox.margin>
                    <Insets bottom="4.0" />
                </VBox.margin>
            </Label>

            <Label fx:id="address" styleClass="cell_small_label" text="\$address">
                <minHeight>
                    <!-- Ensures that the label text is never truncated -->
                    <Region fx:constant="USE_PREF_SIZE"/>
                </minHeight>
                <VBox.margin>
                    <Insets bottom="4.0" />
                </VBox.margin>
            </Label>
        </VBox>
        <rowConstraints>
            <RowConstraints/>
        </rowConstraints>
    </GridPane>
</HBox>
