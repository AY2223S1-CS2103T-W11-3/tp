<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.TextArea?>
<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" resizable="false"
         xmlns:fx="http://javafx.com/fxml/1" width="720" height="480" onCloseRequest="#handleCloseAddCommissionWindow">
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@DarkTheme.css"/>
            </stylesheets>

            <BorderPane fx:id="addCommissionContainer" style="-fx-background-color: #3C424B;">
                <top>
                    <HBox style="-fx-background-color: #1E2229;">
                        <Label text="Add Commission" style="-fx-font-size: 24px; -fx-text-fill: #E8E8E8;
                            -fx-font-family: Arial; -fx-font-weight: bold;"/>
                        <padding>
                            <Insets top="16" bottom="16" left="36" right="36"/>
                        </padding>
                        <BorderPane.margin>
                            <Insets bottom="14"/>
                        </BorderPane.margin>
                    </HBox>
                </top>
                <center>
                    <VBox spacing="12">
                        <HBox fx:id="errorMessagePlaceholder" alignment="CENTER"/>
                        <HBox>
                            <Label text="Title" styleClass="addCommissionWindowLabel">
                                <HBox.margin>
                                    <Insets top ="10" right="82.0"/>
                                </HBox.margin>
                            </Label>
                            <TextField fx:id="title"  styleClass="addCommissionTextField" minWidth="500"/>
                        </HBox>

                        <HBox>
                            <Label text="Tags" styleClass="addCommissionWindowLabel">
                                <HBox.margin>
                                    <Insets right="78.0"/>
                                </HBox.margin>
                            </Label>
                            <TextField fx:id="tags" styleClass="addCommissionTextField" minWidth="500"/>
                        </HBox>

                        <HBox spacing="36">
                            <HBox>
                                <Label text="Deadline" styleClass="addCommissionWindowLabel">
                                    <HBox.margin>
                                        <Insets right="50.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="deadline" styleClass="addCommissionTextField"/>
                            </HBox>

                            <HBox>
                                <Label text="Fee" styleClass="addCommissionWindowLabel">
                                    <HBox.margin>
                                        <Insets right="20.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="fee"  styleClass="addCommissionTextField"/>
                            </HBox>
                        </HBox>

                        <HBox>
                            <Label text="Completed" styleClass="addCommissionWindowLabel">
                                <HBox.margin>
                                    <Insets right="36.0"/>
                                </HBox.margin>
                            </Label>
                            <TextField fx:id="completed" styleClass="addCommissionTextField"/>
                        </HBox>

                        <HBox>
                            <Label text="Description" styleClass="addCommissionWindowLabel">
                                <HBox.margin>
                                    <Insets right="32.0"/>
                                </HBox.margin>
                            </Label>
                            <TextArea fx:id="description" styleClass="addCommissionTextArea"
                                      maxWidth="500" prefHeight="100" wrapText="true"/>
                        </HBox>
                        <BorderPane.margin>
                            <Insets left="36" right="36"/>
                        </BorderPane.margin>
                    </VBox>
                </center>
                <bottom>
                    <HBox alignment="BOTTOM_RIGHT">
                        <Button fx:id="addCommissionButton" mnemonicParsing="false"
                                text="+   Add Commission" styleClass="addCommissionWindowButton"
                                onAction="#addCommission">
                            <HBox.margin>
                                <Insets left="5.0"/>
                            </HBox.margin>
                        </Button>
                        <BorderPane.margin>
                            <Insets top="12" left="16" right="16" bottom="16"/>
                        </BorderPane.margin>
                    </HBox>
                </bottom>
            </BorderPane>
        </Scene>
    </scene>
</fx:root>
