<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT" id="cell_id_title_container">
                <Label fx:id="id" id="cell_id_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="title" text="\$title" id="cell_title_label" />
                <VBox.margin>
                    <Insets bottom="4"/>
                </VBox.margin>
            </HBox>
            <FlowPane fx:id="tags" styleClass="commissionTags">
                <VBox.margin>
                    <Insets bottom="4" />
                </VBox.margin>
            </FlowPane>
            <Label fx:id="deadline" text="\$deadline" id="cell_field_label" />
            <Label fx:id="fee" text="\$fee" id="cell_field_label" />
            <Label fx:id="completionStatus" text="\$completionStatus" id="cell_field_label" />
        </VBox>
    </GridPane>
</HBox>
