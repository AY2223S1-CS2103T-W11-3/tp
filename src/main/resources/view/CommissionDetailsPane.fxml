<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>
<HBox id="detailsPane" fx:id="detailsPane"
      xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" styleClass="edge-to-edge">
    <AnchorPane minHeight="0.0" minWidth="0.0" HBox.hgrow="ALWAYS">
    <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="edge-to-edge"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <content>
            <VBox alignment="TOP_LEFT">
                <padding>
                    <Insets bottom="5" left="15" right="5" top="5" />
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label fx:id="id" styleClass="cell_big_label" textFill="#D8D8D8" wrapText="true">
                        <minHeight>
                            <!-- Ensures that the label text is never truncated -->
                            <Region fx:constant="USE_PREF_SIZE" />
                        </minHeight>
                    </Label>
                    <Label id="title" fx:id="title" styleClass="cell_title_label" text="\$first" wrapText="true">
                        <minHeight>
                            <!-- Ensures that the label text is never truncated -->
                            <Region fx:constant="USE_PREF_SIZE" />
                        </minHeight>
                    </Label>
                    <VBox.margin>
                        <Insets bottom="8.0" />
                    </VBox.margin>
                </HBox>
                <FlowPane fx:id="tags">
                    <VBox.margin>
                        <Insets bottom="8.0" />
                    </VBox.margin>
                </FlowPane>
                <HBox alignment="CENTER_LEFT">
                    <Circle fx:id="completionStatusCircle" radius="4">
                        <HBox.margin>
                            <Insets right="8"/>
                        </HBox.margin>
                    </Circle>
                    <Label fx:id="completionStatus" styleClass="cell_small_label" text="\$completionStatus" />
                    <VBox.margin>
                        <Insets bottom="8.0" />
                    </VBox.margin>
                </HBox>
                <HBox>
                    <Label fx:id="description" styleClass="cell_small_label" text="\$description" wrapText="true">
                        <minHeight>
                            <!-- Ensures that the label text is never truncated -->
                            <Region fx:constant="USE_PREF_SIZE" />
                        </minHeight>
                    </Label>
                    <VBox.margin>
                        <Insets bottom="8" />
                    </VBox.margin>
                </HBox>
                <HBox>
                    <ImageView fx:id="feeIcon" fitWidth="14" fitHeight="16">
                        <HBox.margin>
                            <Insets right="8"/>
                        </HBox.margin>
                    </ImageView>
                    <Label fx:id="fee" styleClass="cell_small_label" text="\$fee" wrapText="true">
                        <minHeight>
                            <!-- Ensures that the label text is never truncated -->
                            <Region fx:constant="USE_PREF_SIZE" />
                        </minHeight>
                    </Label>
                    <VBox.margin>
                        <Insets bottom="4.0" />
                    </VBox.margin>
                </HBox>
                <HBox>
                    <ImageView fx:id="deadlineIcon" fitWidth="14" fitHeight="14">
                        <HBox.margin>
                            <Insets right="8"/>
                        </HBox.margin>
                    </ImageView>
                    <Label fx:id="deadline" styleClass="cell_small_label" text="\$deadline" />
                    <VBox.margin>
                        <Insets bottom="4.0" />
                    </VBox.margin>
                </HBox>
                <HBox>
                    <ImageView fx:id="customerIcon" fitWidth="12.5" fitHeight="16">
                        <HBox.margin>
                            <Insets right="8"/>
                        </HBox.margin>
                    </ImageView>
                    <Label fx:id="customerName" styleClass="cell_small_label" text="\$customerName" wrapText="true">
                        <minHeight>
                            <!-- Ensures that the label text is never truncated -->
                            <Region fx:constant="USE_PREF_SIZE" />
                        </minHeight>
                    </Label>
                    <VBox.margin>
                        <Insets bottom="4.0" />
                    </VBox.margin>
                </HBox>
                <ListView fx:id="iterationListView" VBox.vgrow="ALWAYS" />
            </VBox>
        </content>
    </ScrollPane>
    </AnchorPane>
</HBox>
